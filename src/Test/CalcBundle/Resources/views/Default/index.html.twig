 <body>

<script type="text/javascript">

</script>
<div id="calculator">
	<div id="display">0</div>
	<div id="pad">
		<div id="numbers">
			<button class="digit" value="7">7</button>
			<button class="digit" value="8">8</button>
			<button class="digit" value="9">9</button>
			<br/>
			<button class="digit" value="4">4</button>
			<button class="digit" value="5">5</button>
			<button class="digit" value="6">6</button>
			<br/>
			<button class="digit" value="1">1</button>
			<button class="digit" value="2">2</button>
			<button class="digit" value="3">3</button>
			<br/>
			<button class="digit" value="0">0</button>
			<button id="comma" value=",">,</button>
			<br/>
		</div>
		<div id="operations">
			<button class="operation" value="add">+</button>
			<button class="operation" value="substract">-</button>
			<button class="operation" value="multiply">*</button>
			<button class="operation" value="divide">/</button>
			<button id="execute" value="execute">=</button>
			<button id="reset" value="execute">R</button>
		</div>
	</div>
</div>
<div id="history">
	<h3>History</h3>
	<ul>
{% for operation in history %}
		<li>{{ operation.argument1 }} {{ operation.operator }} {{ operation.argument2 }} = {{ operation.result }}</li>
{% endfor %}
	</ul>
</div>
</body>
